 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="100"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10" >
    </LinearLayout>
    
    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
         <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" >

         <EditText
             android:id="@+id/et_UserID"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:hint="@string/user_id"
             android:singleLine="true"
             android:textSize="18sp">
             <requestFocus />
         </EditText>

         <EditText
             android:id="@+id/et_Password"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingTop="20dp"
             android:layout_below="@+id/et_UserID"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:hint="@string/password_text"
             android:singleLine="true"
             android:textSize="18sp" />

         <EditText
             android:id="@+id/et_Name"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingTop="20dp"
             android:layout_below="@+id/et_Password"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:hint="@string/name_text"
             android:singleLine="true"
             android:textSize="18sp" />
         
         <EditText
             android:id="@+id/et_Age"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingTop="20dp"
             android:layout_below="@+id/et_Name"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:hint="@string/age_text"
             android:singleLine="true"
             android:textSize="18sp" />
         
         <EditText
             android:id="@+id/et_Zip"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingTop="20dp"
             android:layout_below="@+id/et_Age"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:hint="@string/zip_text"
             android:singleLine="true"
             android:textSize="18sp" />
         
         <EditText
             android:id="@+id/et_Profession"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingTop="20dp"
             android:layout_below="@+id/et_Zip"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:hint="@string/profession_text"
             android:singleLine="true"
             android:textSize="18sp" />
         
         <EditText
             android:id="@+id/et_Interests"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingTop="20dp"
             android:layout_below="@+id/et_Profession"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:hint="@string/interest_text"
             android:singleLine="true"
             android:textSize="18sp" />
         
         <Spinner
             android:id="@+id/sp_Ethnicity"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingTop="20dp"
             android:layout_below="@+id/et_Interests"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:singleLine="true"
             android:textSize="18sp" />
         
         <Spinner
             android:id="@+id/sp_Fitness"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingTop="20dp"
             android:layout_below="@+id/sp_Ethnicity"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:singleLine="true"
             android:textSize="18sp" />
         
        <Button
             android:id="@+id/bt_Register"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/sp_Fitness"
             android:layout_marginLeft="30dp"
             android:layout_marginRight="30dp"
             android:layout_marginTop="30dp"
             android:background="@drawable/button_bg"
             android:text="@string/register_text"
             android:textColor="@color/Black" >

         </Button>
         
		</RelativeLayout>
    </RelativeLayout>
    </ScrollView>
</LinearLayout><!-- From: file:/F:/sample_code/javaplays-mobilestarterkit/javaplays-mobileui-mobilestarterkit-extend/res/layout/registerui.xml -->